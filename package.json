{
    "name": "vscode-ssql",
    "publisher": "ToyamaLab",
    "displayName": "SuperSQL",
    "description": "",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:ssql.exec"
    ],
    "main": "./out/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ToyamaLab/vscode-ssql.git"
    },
    "contributes": {
        "languages": [
            {
                "id": "ssql",
                "aliases": [
                    "SuperSQL",
                    "ssql"
                ],
                "extensions": [
                    ".ssql"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ssql",
                "scopeName": "source.ssql",
                "path": "./syntaxes/ssql.tmLanguage.plist"
            }
        ],
        "commands": [
            {
              "command": "ssql.debug",
              "title": "SSQL Debug"
            },
            {
              "command": "ssql.exec",
              "title": "Execute SuperSQL",
              "category": "SuperSQL"
            }
        ],
        "configuration": {
            "title": "SuperSQL",
            "properties": {
                "ssql.bringYourOwnJarFile": {
                    "description": "SuperSQL Jar file path. If not specified, bundle version will be used.",
                    "type": "string",
                    "default": "",
                    "scope": "resource"
                },
                "ssql.configFile": {
                    "description": "Configuration file path. If not specified, .ssql on your home directory will be used.",
                    "type": "string",
                    "default": "",
                    "scope": "resource"
                },
                "ssql.custom.db.driver": {
                    "description": "Driver for database connection.",
                    "type": "string",
                    "default": "",
                    "enum": ["", "postgresql", "sqlite", "mysql", "db2", "sqlserver"],
                    "scope": "resource"
                },
                "ssql.custom.db.host": {
                    "description": "Host name for database connection.",
                    "type": "string",
                    "default": ""
                },
                "ssql.custom.db.hostPort": {
                    "description": "Port number for database connection.",
                    "type": "string",
                    "default": ""
                },
                "ssql.custom.db.name": {
                    "description": "Database name for database connection.",
                    "type": "string",
                    "default": ""
                },
                "ssql.custom.db.user": {
                    "description": "User name for database connection.",
                    "type": "string",
                    "default": ""
                },
                "ssql.custom.db.userPassword": {
                    "description": "User's password for database connection.",
                    "type": "string",
                    "default": ""
                },
                "ssql.custom.outputDirectory": {
                    "description": "Output directory.",
                    "type": "string",
                    "default": ""
                },
                "ssql.custom.vastAdditionalOptions": {
                    "description": "Additional options to pass the SSQL command. (e.g., -debug)",
                    "type": "string",
                    "default": ""
                }
            }
        },
        "keybindings": [
            {
              "command": "ssql.exec",
              "key": "ctrl+shift+e",
              "mac": "cmd+shift+e",
              "when": "editorTextFocus && editorLangId == 'ssql'"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.49.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}
